<h1>New Blog</h1>

<%= form_with(url: blogs_path, method: :post, local: true, multipart: true) do |form| %>
  <div class="form-group">
    <%= form.label :audio_file %>
    <%= form.file_field :audio_file, class: 'form-control' %>

    <%= form.label :pdf_file %>
    <%= form.file_field :pdf_file, class: 'form-control' %>
  </div>

  <%= form.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
